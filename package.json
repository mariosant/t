{
  "name": "@mariosant/t",
  "version": "0.0.4",
  "description": "A simple minimal test runner, that embraces a functional testing approach.",
  "main": "src/index.js",
  "bin": "src/t.js",
  "scripts": {
    "precommit": "lint-staged",
    "lint": "xo",
    "prettier": "prettier **/*.js",
    "test": "node ./src/t.js --exclude 'fixtures/**'"
  },
  "keywords": [
    "test"
  ],
  "author": "Marios Antonoudiou <mariosant@sent.com>",
  "license": "ISC",
  "dependencies": {
    "commander": "^2.15.1",
    "globby": "^8.0.1",
    "p-all": "^1.0.0",
    "p-timeout": "^2.0.1",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "delay": "^2.0.0",
    "eslint-config-prettier": "^2.9.0",
    "husky": "^0.14.3",
    "jest": "^22.3.0",
    "lint-staged": "^6.1.0",
    "nodemon": "^1.15.1",
    "prettier": "^1.10.2",
    "tap-colorize": "^1.2.0",
    "tap-markdown": "^1.2.1",
    "unexpected": "^10.37.5",
    "xo": "^0.20.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "xo --fix",
      "git add"
    ]
  },
  "xo": {
    "envs": [
      "jest"
    ],
    "extends": [
      "prettier"
    ],
    "rules": {
      "camelcase": [
        1
      ]
    }
  }
}
